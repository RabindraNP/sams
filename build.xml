<!--
	Master Build for SAMS
	$Id$
	
	External dependencies:
		- The Izpack (http://izforge.com/izpack) tool is assumed to
		  be intalled in /home/carueda/prg/IzPack/
		  See samsgui/build.xml
		- External required libraries for the final SAMS application
		  are located in directory lib/.
	
	For a complete build including the installer for end users:
		ant installer
-->
<project name="sams" default="compile" >
	<!-- Base dir for generated files -->
	<property name="generated" value="../_GENERATED/sams"/>

    <target name="init">
		<mkdir dir="${generated}"/>
    </target>
	
    <target name="clean-dist">
		<delete dir="${generated}"/>
    </target>

	<target name="compile" depends="init">
		<ant dir="fileutils" inheritAll="false"/>
		<ant dir="sig" inheritAll="false"/>
		<ant dir="sigoper" inheritAll="false"/>
		<ant dir="specfile" inheritAll="false"/>
		<ant dir="sfsys" inheritAll="false"/>
		<ant dir="envifile" inheritAll="false"/>
		<ant dir="samscore" inheritAll="false"/>
		<ant dir="samsgui" inheritAll="false"/>
	</target>
	
    <target name="installer" depends="compile">
		<ant dir="samsgui" target="installer" inheritAll="false"/>
    </target>
	
	<target name="clean">
		<ant dir="fileutils" target="clean" inheritAll="false"/>
		<ant dir="sig" target="clean" inheritAll="false"/>
		<ant dir="sigoper" target="clean" inheritAll="false"/>
		<ant dir="specfile" target="clean" inheritAll="false"/>
		<ant dir="sfsys" target="clean" inheritAll="false"/>
		<ant dir="envifile" target="clean" inheritAll="false"/>
		<ant dir="samscore" target="clean" inheritAll="false"/>
		<ant dir="samsgui" target="clean" inheritAll="false"/>
	</target>

</project>
